<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h2 class="h4 mb-0">Village Information</h2>
          <% if policy(@village).update? %>
            <%= link_to "Edit", edit_village_path, class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Village Name:</dt>
            <dd class="col-sm-9"><%= @village.name %></dd>

            <dt class="col-sm-3">Setup Status:</dt>
            <dd class="col-sm-9">
              <% if @village.setup_complete? %>
                <span class="badge bg-success">Complete</span>
              <% else %>
                <span class="badge bg-warning">Incomplete</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Created:</dt>
            <dd class="col-sm-9"><%= @village.created_at.strftime("%B %d, %Y") %></dd>

            <dt class="col-sm-3">Last Updated:</dt>
            <dd class="col-sm-9"><%= @village.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
