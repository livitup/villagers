<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="h4 mb-0">Edit Program: <%= @conference_program.program.name %></h2>
          <small class="text-white-50">for <%= @conference.name %></small>
        </div>
        <div class="card-body">
          <%= form_with model: [@conference, @conference_program], url: conference_conference_program_path(@conference, @conference_program), local: true do |form| %>
            <% if @conference_program.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@conference_program.errors.count, "error") %> prohibited this program from being updated:</h5>
                <ul class="mb-0">
                  <% @conference_program.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :public_description, "Conference-Specific Description", class: "form-label" %>
              <%= form.text_area :public_description, rows: 4, class: "form-control",
                  placeholder: "Override the default program description for this conference" %>
              <small class="form-text text-muted">
                Leave blank to use the default program description: "<%= @conference_program.program.description %>"
              </small>
            </div>

            <div class="mb-3">
              <%= form.label :max_volunteers, "Volunteers Needed Per Shift (Override)", class: "form-label" %>
              <%= form.number_field :max_volunteers, min: 1, class: "form-control", style: "max-width: 150px;", placeholder: "Use program default (#{@conference_program.program.max_volunteers})" %>
              <small class="form-text text-muted">
                Program default: <%= @conference_program.program.max_volunteers %>. Leave blank to use default, or set a value to override. Changing this will NOT update existing timeslots.
              </small>
            </div>

            <div class="mb-3">
              <label class="form-label">Schedule</label>
              <p class="text-muted small">
                Specify which days this program runs and the hours for each day. 
                The conference runs from <%= @conference.start_date.strftime("%B %d") %> to <%= @conference.end_date.strftime("%B %d, %Y") %>.
              </p>
              <div id="day-schedules">
                <% (@conference.start_date..@conference.end_date).each_with_index do |date, index| %>
                  <% day_schedule = @conference_program.day_schedules[index.to_s] || {} %>
                  <% enabled = day_schedule["enabled"] == true || day_schedule["enabled"] == "1" %>
                  <div class="card mb-2">
                    <div class="card-body">
                      <div class="form-check mb-2">
                        <%= check_box_tag "conference_program[day_schedules][#{index}][enabled]", "1", enabled, 
                            class: "form-check-input day-enabled", id: "day_#{index}_enabled",
                            data: { day: index } %>
                        <%= label_tag "day_#{index}_enabled", "Day #{index + 1}: #{date.strftime('%A, %B %d')}", class: "form-check-label fw-bold" %>
                      </div>
                      <div class="row day-schedule-fields" style="display: <%= enabled ? 'block' : 'none' %>;">
                        <div class="col-md-6">
                          <%= label_tag "conference_program[day_schedules][#{index}][start]", "Start Time", class: "form-label" %>
                          <%= time_field_tag "conference_program[day_schedules][#{index}][start]", 
                              day_schedule["start"] || @conference.conference_hours_start&.strftime("%H:%M"), 
                              class: "form-control" %>
                        </div>
                        <div class="col-md-6">
                          <%= label_tag "conference_program[day_schedules][#{index}][end]", "End Time", class: "form-label" %>
                          <%= time_field_tag "conference_program[day_schedules][#{index}][end]", 
                              day_schedule["end"] || @conference.conference_hours_end&.strftime("%H:%M"), 
                              class: "form-control" %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "Cancel", conference_conference_programs_path(@conference), class: "btn btn-secondary btn-lg" %>
              <%= form.submit "Update Program", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.day-enabled').forEach(function(checkbox) {
      checkbox.addEventListener('change', function() {
        const dayFields = this.closest('.card').querySelector('.day-schedule-fields');
        if (this.checked) {
          dayFields.style.display = 'block';
        } else {
          dayFields.style.display = 'none';
        }
      });
    });
  });
</script>

