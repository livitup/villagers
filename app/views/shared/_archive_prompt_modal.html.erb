<% if user_signed_in? && @past_unarchived_conferences&.any? %>
  <div class="modal fade" id="archivePromptModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Archive Past Conferences?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with url: bulk_archive_conferences_path, method: :post, local: true, id: "archivePromptForm" do %>
          <div class="modal-body">
            <p class="text-muted">
              The following conferences have ended and can be archived to keep your conference list clean.
            </p>
            <div class="mb-3">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="selectAllArchive" onclick="toggleAllArchiveCheckboxes()">
                <label class="form-check-label fw-bold" for="selectAllArchive">Select All</label>
              </div>
            </div>
            <div class="list-group">
              <% @past_unarchived_conferences.each do |conference| %>
                <label class="list-group-item list-group-item-action">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <input class="form-check-input me-2 archive-checkbox" type="checkbox"
                             name="conference_ids[]" value="<%= conference.id %>">
                      <strong><%= conference.name %></strong>
                      <br>
                      <small class="text-muted">
                        Ended: <%= conference.end_date.strftime("%B %d, %Y") %>
                        (<%= pluralize((Date.today - conference.end_date).to_i, "day") %> ago)
                      </small>
                    </div>
                  </div>
                </label>
              <% end %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="dismissArchivePrompt()">
              Remind Me Later
            </button>
            <button type="submit" class="btn btn-primary">
              Archive Selected
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    function toggleAllArchiveCheckboxes() {
      const selectAll = document.getElementById('selectAllArchive');
      const checkboxes = document.querySelectorAll('.archive-checkbox');
      checkboxes.forEach(cb => cb.checked = selectAll.checked);
    }

    function dismissArchivePrompt() {
      // Store in session that user dismissed the prompt
      sessionStorage.setItem('archivePromptDismissed', 'true');
    }

    document.addEventListener('DOMContentLoaded', function() {
      // Only show modal if not dismissed this session
      if (!sessionStorage.getItem('archivePromptDismissed')) {
        const modal = new bootstrap.Modal(document.getElementById('archivePromptModal'));
        modal.show();
      }
    });

    document.addEventListener('turbo:load', function() {
      // Only show modal if not dismissed this session
      if (!sessionStorage.getItem('archivePromptDismissed') && document.getElementById('archivePromptModal')) {
        const modal = new bootstrap.Modal(document.getElementById('archivePromptModal'));
        modal.show();
      }
    });
  </script>
<% end %>
