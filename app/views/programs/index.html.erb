<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Programs</h1>
    <% if policy(Program).create? %>
      <%= link_to "New Program", new_program_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @programs.any? %>
    <div class="row">
      <% @programs.each do |program| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to program.name, program_path(program), class: "text-decoration-none" %>
              </h5>
              <% if program.description.present? %>
                <p class="card-text text-muted">
                  <%= truncate(program.description, length: 100) %>
                </p>
              <% end %>
            </div>
            <div class="card-footer bg-transparent">
              <%= link_to "View", program_path(program), class: "btn btn-sm btn-outline-primary" %>
              <% if policy(program).update? %>
                <%= link_to "Edit", edit_program_path(program), class: "btn btn-sm btn-outline-secondary" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h5 class="alert-heading">No Programs Yet</h5>
      <p class="mb-0">
        <% if policy(Program).create? %>
          Get started by <%= link_to "creating your first program", new_program_path, class: "alert-link" %>.
        <% else %>
          No programs have been created yet.
        <% end %>
      </p>
    </div>
  <% end %>
</div>

