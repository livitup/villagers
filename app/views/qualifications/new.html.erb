<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2>New Qualification</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @qualification, local: true do |form| %>
            <% if @qualification.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@qualification.errors.count, "error") %> prohibited this qualification from being saved:</h4>
                <ul>
                  <% @qualification.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, rows: 4, class: "form-control", required: true %>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "Cancel", qualifications_path, class: "btn btn-secondary btn-lg" %>
              <%= form.submit "Create Qualification", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

